---
import Base from './Base.astro';
const { frontmatter } = Astro.props;
---

    <Base frontmatter={frontmatter}>
      <main class="position-relative p-3 z-0">
        <h1 class="pt-5">{ frontmatter.title }</h1>
        <div class="accordion" id="mokuji" style="max-width:400px;">
          <div class="accordion-item">
            <h2 class="accordion-header">
              <button class="accordion-button" type="button" 
                data-bs-toggle="collapse" data-bs-target="#collapseOne" 
                aria-expanded="true" aria-controls="collapseOne">
                目次
              </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" 
              data-bs-parent="#mokuji">
              <div class="accordion-body">
                <ul id="mokuji-ul" class="list-group list-group-flush">
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-5 mb-5 learn-grav-default"><slot /></div>
      </main>
    </Base>

